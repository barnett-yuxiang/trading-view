//@version=6
indicator("Trade Value", overlay=true)

tradeValue = volume * close

plot(
     tradeValue,
     title   = "Trade Value",
     format  = format.volume,
     color   = color.new(color.red, 100),
     style   = plot.style_line,
     linewidth = 1)
